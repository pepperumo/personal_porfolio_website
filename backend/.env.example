# Environment Configuration for PeppeGPT Backend

# API Configuration
API_TITLE=PeppeGPT Backend
API_VERSION=1.0.0
API_DESCRIPTION=AI-powered chat backend for personal portfolio

# Server Configuration
PORT=7860
HOST=0.0.0.0

# CORS Configuration
ALLOWED_ORIGINS=https://pepperumo.github.io,http://localhost:3000,http://127.0.0.1:3000
ALLOW_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Hugging Face Configuration
HF_MODEL_NAME=all-MiniLM-L6-v2
HF_CHAT_MODEL_NAME=gpt2
HF_CACHE_DIR=/tmp/hf_cache
MAX_CHAT_RESPONSE_TOKENS=100
CHAT_TEMPERATURE=0.7

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-5
USE_OPENAI=true
OPENAI_MAX_TOKENS=150
OPENAI_TEMPERATURE=0.3

# Feature Flags
ENABLE_FALLBACK_RESPONDER=true
DEBUG_MODE=false

# Environment Type
ENVIRONMENT=production